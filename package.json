    "@prisma/client": "5.22.0",
    "@vueuse/core": "^11.2.0",
    "element-plus": "^2.8.7",
    "nuxt": "^3.14.159",
    "nuxt-auth-utils": "^0.5.0",
    "nuxt-security": "^2.0.0",
    "pinia": "^2.2.5",
    "pinia-plugin-persistedstate": "^4.1.1",
    "remark-emoji": "^5.0.1",
    "vue": "^3.5.12",
    "vue-router": "^4.4.5",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241022.0",
