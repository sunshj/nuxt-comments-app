    "unocss": "^0.63.6",
    "unplugin-vue-router": "^0.10.8",
    "vue-tsc": "^2.1.10",
    "wrangler": "^3.57.1"
  },
  "pnpm": {
    "patchedDependencies": {
      "nuxt-security@2.0.0": "patches/nuxt-security@2.0.0.patch"
    }
  },
  "lint-staged": {
    "*.{vue,js,ts}": [
      "eslint --fix",
      "prettier --write"
    ]
